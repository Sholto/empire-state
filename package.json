{
	"name": "immutable-state-controller-root",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "pnpm build --recursive",
		"clean": "pnpm clean --recursive",
		"clean:node": "pnpm --recursive exec rm -rf node_modules",
		"link": "pnpm --recursive --workspace-concurrency=1 exec pnpm link --global",
		"release": "pnpm clean && pnpm build && pnpm test && pnpx changeset publish && pnpm install",
		"release:version": "pnpm changeset version && pnpm install",
		"test": "pnpm test --recursive --workspace-concurrency 1",
		"watch": "pnpm watch --parallel"
	},
	"keywords": [
		"immer"
	],
	"author": "Karl von Randow",
	"license": "MIT",
	"devDependencies": {
		"@changesets/cli": "^2.17.0",
		"@types/jest": "^27.0.2",
		"@types/node": "^16.11.1",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"babel-eslint": "^10.1.0",
		"eslint": "^8.0.1",
		"jest": "^27.3.1",
		"ts-jest": "^27.0.7",
		"typescript": "^4.4.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/karlvr/immutable-state-controller.git"
	}
}
